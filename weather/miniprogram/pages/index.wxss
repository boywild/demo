/* miniprogram/pages/index.wxss */

.bg {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
}

/* 搜索 */

.search {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
}

.search-inner {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 60rpx;
    margin: 15rpx 50rpx;
    padding: 0 15rpx;
    border-bottom: 1px solid #fff;
    color: #fff;
    font-size: 28rpx;
    box-sizing: border-box;
}

.search-txt {
    flex: 1;
}

.search-inner .icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 16rpx;
}

/* 内容 */

.content {
    background: #f00;
    flex: 1;
    margin-top: 90rpx;
    position: relative;
    z-index: 3;
    width: 100%;
}

/* 用户 */

.user {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color: #fff;
}

.user .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
}

.user .name {
    font-size: 30rpx;
    padding: 0 20rpx;
}

.user .downArrow {
    width: 20rpx;
    height: 20rpx;
}
.location {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #fff;
}
.location .place {
    display: flex;
    justify-content: space-between;
    align-items: center;

}
.place .icon {
    width: 30rpx;
    height: 30rpx;
}
.place .gps {
    font-size: 60rpx;
    margin: 0 30rpx;
}
.place .downArrow {
    width: 30rpx;
    height: 30rpx;
}
.location .update {
    font-size: 24rpx;
}
