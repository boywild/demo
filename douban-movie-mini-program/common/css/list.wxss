page, .movie-scroll {
    height: 100%;
}

.movie-box {
    display: inline-block;
    width: 335rpx;
    margin: 10px;
}

.movie-box>image {
    max-width: 100%;
}

.movie-title {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.loading {
    text-align: center;
}

.loading>image {
    width: 100rpx;
}
