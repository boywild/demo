/* pages/music/music.wxss */
page{
    background: #333334;
}
.music-box{
    padding: 20rpx;
}
.music {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    margin: 20rpx 0;
    background:rgba(0, 0, 0, .5);
}

.music-thumbnail {
    width: 200rpx;
    height: 200rpx;
}

.music-info {
    color: #fff;
    margin-left: 30rpx;
    width: 480rpx;
}

.music-name,.music-author {
    display: block;
    padding: 10rpx 0;
    font-size: 18px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

